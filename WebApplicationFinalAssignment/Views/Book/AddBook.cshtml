@model WebApplicationFinalAssignment.Models.Books

<form method="post" asp-action="AddBook" asp-controller="Book">
    <div class="border p-3 bg-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Book </h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4 text-light">
                        <label asp-for="BookCategories"></label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownList("BookCategoryId", new SelectList(ViewBag.Dept, "CategoryId", "CategoryName"), htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="BookCategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 text-light">
                        <label asp-for="BookName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookName" class="form-control" />
                        <span asp-validation-for="BookName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 text-light">
                        <label asp-for="AuthorName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AuthorName" class="form-control" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 text-light">
                        <label asp-for="PublisherYear"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PublisherYear" class="form-control" />
                        <span asp-validation-for="PublisherYear" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 text-light">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-8 text-left w-100 float-right px-0">
                    <input type="submit" class="btn bg-success text-light col-6 " value="Save" />
                    <a asp-controller="Book" asp-action="ListBooks" class="btn btn-danger col-5 "> Cancel</a>

                </div>
            </div>
        </div>
    </div>
</form>