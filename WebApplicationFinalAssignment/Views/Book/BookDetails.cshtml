@model WebApplicationFinalAssignment.Models.Books

<script src="~/js/calls.js"></script>
    <div class="border p-3 bg-dark text-light">

        <div class="form-group row">
            <h2 class="text-info pl-3">Book Details </h2>
            <div class="col-12 text-right">
                <a asp-controller="Book" asp-action="EditBook" asp-route-id="@ViewData["id"]" class="btn btn-primary">
                    Edit
                </a>
                <button onclick="deleteBook(@ViewData["id"])" class="btn btn-danger">
                    Delete
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookId" id="bookid" disabled class="form-control bg-dark text-light" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookCategories"></label>
                    </div>
                    <div class="col-8">
                        @{
                            string Dept = "";
                            foreach (var val in (IEnumerable<Books>)ViewData["dept"])
                            {
                                Dept = val.BookDept;
                            }
                        }
                        <input value="@Dept" disabled class="form-control text-light bg-dark" />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookName" disabled class="form-control text-light bg-dark" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AuthorName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AuthorName" disabled class="form-control text-light bg-dark" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PublisherYear"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PublisherYear" disabled class="form-control text-light bg-dark" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control text-light bg-dark" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UpdatedOn"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UpdatedOn" disabled class="form-control text-light bg-dark" />
                    </div>
                </div>
                <div class="text-black-50">

                </div>
            </div>
        </div>
    </div>


