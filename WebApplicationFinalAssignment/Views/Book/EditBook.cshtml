
@model WebApplicationFinalAssignment.Models.Books


<form method="post" asp-action="EditBookDetails" id="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="border p-3 bg-dark text-light">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Book </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookId" readonly class="form-control text-light bg-dark" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookCategoryId"></label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownList("BookCategoryId", new SelectList(ViewBag.Dept, "CategoryId", "CategoryName"), htmlAttributes: new { @class = "form-control" })

                        <span asp-validation-for="BookCategoryId" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookName" class="form-control" />
                        <span asp-validation-for="BookName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AuthorName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AuthorName" class="form-control" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PublisherYear"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PublisherYear" class="form-control" />
                        <span asp-validation-for="PublisherYear" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UpdatedOn"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UpdatedOn" class="form-control" />
                        <span asp-validation-for="UpdatedOn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-8 text-left w-100 float-right px-0">
                    <input type="submit" id="btnsubmit" class="btn  text-light col-6 bg-success" value="Save" />
                    <a asp-action="ListBooks" asp-controller="Book" class="btn bg-danger text-light col-5">
                        Cancel
                    </a>

                </div>
            </div>
        </div>
    </div>
</form>

